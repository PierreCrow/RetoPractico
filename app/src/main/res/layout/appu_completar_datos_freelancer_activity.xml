<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/botonback" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
              >

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="0dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp">

                        <LinearLayout
                            android:id="@+id/llInfoContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"
                            android:orientation="vertical"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:layout_marginBottom="20dp">


                            <TextView
                                android:id="@+id/titulo_olvide"
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="15dp"
                                android:fontFamily="@font/gothambold"
                                android:text="Completar los datos para continuar"
                                android:textColor="@color/labelColor"
                                android:textSize="25dp"
                                android:lineSpacingExtra="5dp"/>




                            <com.google.android.material.textfield.TextInputLayout

                                android:id="@+id/tiEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="40dp"
                                android:layout_marginRight="20dp"
                                android:backgroundTint="@color/text_material_hint_edittext"
                                android:theme="@style/Theme.App.Base"
                                app:errorEnabled="true"
                                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etEmail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/gothambook"
                                    android:hint="Tu correo"
                                    android:lines="1"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/text_material_hint_edittext"
                                    android:textSize="16sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="20dp"
                                android:backgroundTint="@color/text_material_hint_edittext"
                                android:theme="@style/Theme.App.Base"
                                app:errorEnabled="true"
                                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etNames"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/gothambook"
                                    android:hint="Nombres y apellidos"
                                    android:lines="1"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/text_material_hint_edittext"
                                    android:textSize="16sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="20dp"
                                android:backgroundTint="@color/text_material_hint_edittext"
                                android:theme="@style/Theme.App.Base"
                                app:errorEnabled="true"
                                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etPass"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/gothambook"
                                    android:hint="Tu contraseña"
                                    android:lines="1"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/text_material_hint_edittext"
                                    android:textSize="16sp"
                                    android:inputType="textPassword"/>

                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="20dp"
                                android:backgroundTint="@color/text_material_hint_edittext"
                                android:theme="@style/Theme.App.Base"
                                app:errorEnabled="true"
                                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etRepeatPass"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/gothambook"
                                    android:hint="Repite tu contraseña"
                                    android:lines="1"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/text_material_hint_edittext"
                                    android:textSize="16sp"
                                    android:inputType="textPassword"/>

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="20dp"
                                android:backgroundTint="@color/text_material_hint_edittext"
                                android:theme="@style/Theme.App.Base"
                                app:errorEnabled="true"
                                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etCellPhone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/gothambook"
                                    android:hint="Celular"
                                    android:lines="1"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/text_material_hint_edittext"
                                    android:textSize="16sp"
                                    android:inputType="number"
                                    android:maxLength="12"/>

                            </com.google.android.material.textfield.TextInputLayout>

                            <Spinner
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="20dp"
                                android:id="@+id/spiTypeDocs"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:backgroundTint="@color/labelColor" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.7dip"
                                android:background="@color/black"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp" />

                            <com.google.android.material.textfield.TextInputLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="35dp"
                                android:layout_marginRight="20dp"
                                android:backgroundTint="@color/text_material_hint_edittext"
                                android:theme="@style/Theme.App.Base"
                                app:errorEnabled="true"
                                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etDocNumber"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/gothambook"
                                    android:hint="Número de documento"
                                    android:lines="1"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/text_material_hint_edittext"
                                    android:textSize="16sp"
                                    android:inputType="number"
                                    android:maxLength="15"/>

                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="20dp"
                                android:backgroundTint="@color/text_material_hint_edittext"
                                android:theme="@style/Theme.App.Base"
                                app:errorEnabled="true"
                                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etAbout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/gothambook"
                                    android:hint="Preséntate"
                                    android:lines="1"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/text_material_hint_edittext"
                                    android:textSize="16sp" />

                            </com.google.android.material.textfield.TextInputLayout>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="20dp"
                                android:text="Carga la foto de tu negocio"
                                android:fontFamily="@font/gothambook"
                                android:textColor="@color/text_material_hint_edittext"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/appu_ic_picture"/>

                                <TextView
                                    android:id="@+id/tvSubirFoto"
                                    android:layout_marginLeft="15dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Subir mi foto"
                                    android:fontFamily="@font/gothammedium"
                                    android:textColor="@color/labelColor"
                                    android:textSize="17dp"/>

                            </LinearLayout>

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/ivUserImage"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/appu_drogo"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:scaleType="centerCrop"
                                android:visibility="gone"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="20dp">

                                <CheckBox
                                    android:id="@+id/chxTerminos"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="-3dp"
                                    android:layout_marginTop="20dp"
                                    android:backgroundTint="@color/labelColor"
                                    android:buttonTint="@color/labelColor"/>

                                <TextView
                                    android:id="@+id/tvTerminos"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Términos y condiciones"
                                    android:layout_marginLeft="0dp"
                                    android:layout_marginTop="20dp"
                                    android:textColor="@color/primaryLabelColor"
                                    android:fontFamily="@font/gothambook"
                                    android:textSize="14sp"></TextView>


                            </LinearLayout>




                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="30dp">


                                <ImageView
                                    android:id="@+id/ivContinue"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="40dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="40dp"
                                    android:layout_marginBottom="0dp"
                                    android:background="@drawable/appu_shape_button_login"
                                    android:textColor="@color/white"
                                    android:textSize="16dp" />


                                <TextView

                                    android:id="@+id/titulo_recuperar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:fontFamily="@font/gothambook"
                                    android:text="Continuar"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />

                            </RelativeLayout>


                        </LinearLayout>

                    </ScrollView>



                </RelativeLayout>

            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>

</LinearLayout>