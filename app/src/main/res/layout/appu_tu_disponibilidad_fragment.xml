<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:weightSum="14"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/ivClose"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/botonback" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tu disponibilidad"
                android:fontFamily="@font/gothambold"
                android:textColor="@color/labelColor"
                android:textSize="21dp" />
        </RelativeLayout>



    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/register_lines"
        >


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabsappunto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:tabIndicatorColor="@color/labelColor"
            app:tabSelectedTextColor="@color/labelColor"
            app:tabTextColor="@color/text_login_subtittle"
            app:tabGravity="fill"
            app:tabMode="fixed">

        </com.google.android.material.tabs.TabLayout>





    </RelativeLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13"
        android:id="@+id/containerViewHome"
        android:layout_marginBottom="7dp"
        android:background="@color/white"
        >


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.viewpager.widget.ViewPager>

    </FrameLayout>











</LinearLayout>
