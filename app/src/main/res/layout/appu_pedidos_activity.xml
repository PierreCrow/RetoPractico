<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/botonback" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/gothambold"
                android:gravity="center"
                android:text="Pedidos"
                android:textColor="@color/labelColor"
                android:textSize="21dp" />
        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="0dp">


                    <TextView

                        android:id="@+id/tvPedidosPendientes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/gothambold"
                        android:text="Pedidos pendientes"
                        android:textColor="@color/labelColor"
                        android:textSize="18dp" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_pedidos_pendientes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp" />


                    <TextView

                        android:id="@+id/tvPedidosAprobados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="35dp"
                        android:fontFamily="@font/gothambold"
                        android:text="Pedidos aprobados"
                        android:textColor="@color/labelColor"
                        android:textSize="18dp" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_pedidos_aprobados"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        />



                    <TextView

                        android:id="@+id/tvPedidosRechazados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="35dp"
                        android:fontFamily="@font/gothambold"
                        android:text="Pedidos rechazados"
                        android:textColor="@color/labelColor"
                        android:textSize="18dp" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_pedidos_rechazados"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        />


                    <TextView

                        android:id="@+id/tvPedidosPagados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="35dp"
                        android:fontFamily="@font/gothambold"
                        android:text="Pedidos completados"
                        android:textColor="@color/labelColor"
                        android:textSize="18dp" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_pedidos_pagados"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        />


                </LinearLayout>

            </ScrollView>


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>