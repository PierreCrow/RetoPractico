<resources>


    <style name="MyActionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="DialogAnimationLeftRigth">
        <item name="android:windowEnterAnimation">@anim/slide_rigth</item>
        <item name="android:windowExitAnimation">@anim/slide_out_rigth</item>
    </style>

    <style parent="@android:style/Widget.Spinner" name="SpinnerAsEditText">
        <item name="android:background">@android:drawable/edit_text</item>
    </style>


    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/text_material_hint_edittext</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/gothambook</item>
        <item name="android:backgroundTint">@color/text_material_hint_edittext</item>
        <item name="colorControlNormal">@color/text_material_hint_edittext</item>

    </style>

    <style name="Theme.App.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/register_labels</item>
        <item name="colorControlActivated">@color/subtititlecolor</item>
        <item name="colorControlHighlight">@color/subtititlecolor</item>
    </style>


    <style name="TransparentProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextLabelInfo">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="TextLabelTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="Buttons_alert_dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16.5sp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/border_cancel_button</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>


    <style name="ThemeOverlay.MySwitch" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorControlActivated">@color/labelColor</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>




    <style name="Theme.Custom" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:calendarViewStyle">@style/Widget.CalendarView.Custom</item>
    </style>

    <style name="Widget.CalendarView.Custom" parent="android:Widget.CalendarView">
        <item name="android:focusedMonthDateColor">@color/labelColor</item>
        <item name="android:weekNumberColor">@color/labelColor</item>
        <item name="android:weekDayTextAppearance">@style/TextAppearence.App.TextInputLayout</item>
        <item name="android:dateTextAppearance">@style/TextAppearence.App.TextInputLayout</item>
    </style>


    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/labelColor</item>
    </style>



    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/menu_inactivo</item>
        <item name="textAllCaps">false</item>

        <item name="android:layout_marginBottom">0sp</item>
        <item name="android:gravity">top</item>
    </style>


</resources>
